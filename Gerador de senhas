import tkinter as tk
from tkinter import messagebox
import random
import string

def gerar_senha():
    try:
        maiuscula = random.choice(string.ascii_uppercase)
        minusculas = random.choices(string.ascii_lowercase, k=5)
        numero = random.choice(string.digits)
        especial = random.choice("!@#$%&*")

        senha_lista = [maiuscula] + minusculas + [numero] + [especial]
        random.shuffle(senha_lista)

        senha = "".join(senha_lista)
        resultado_entry.delete(0, tk.END)
        resultado_entry.insert(0, senha)

    except Exception as e:
        messagebox.showerror("Erro", str(e))

# Janela principal
janela = tk.Tk()
janela.title("Gerador de Senhas")
janela.geometry("350x200")
janela.resizable(False, False)

# T√≠tulo
tk.Label(janela, text="üîê Gerador de Senhas", font=("Arial", 14, "bold")).pack(pady=10)

# Campo de resultado
resultado_entry = tk.Entry(janela, width=30, font=("Arial", 12), justify="center")
resultado_entry.pack(pady=10)

# Bot√£o gerar
tk.Button(janela, text="Gerar Senha", font=("Arial", 11),
          command=gerar_senha).pack(pady=10)

# Observa√ß√£o
tk.Label(
    janela,
    text="1 mai√∫scula ‚Ä¢ 5 min√∫sculas ‚Ä¢ 1 n√∫mero ‚Ä¢ 1 especial",
    font=("Arial", 9)
).pack()

# Loop da interface
janela.mainloop()
